#!/bin/bash
# Git pre-commit hook that runs linting and formatting checks
# This mirrors the CI checks in .github/workflows/ci.yml
#
# Install by running: ./scripts/setup-hooks.sh
# Or manually: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "üîç Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Get the repo root
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Check if we have staged Python files
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)
# Check if we have staged frontend files
STAGED_FRONTEND_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '^frontend/.*\.(ts|tsx|js|jsx)$' || true)

# ============================================
# Backend Checks
# ============================================
if [ -n "$STAGED_PY_FILES" ]; then
    echo ""
    echo "üì¶ Backend checks..."

    # Check if we're in a virtual environment or if backend venv exists
    if [ -d "$REPO_ROOT/backend/.venv" ]; then
        PYTHON="$REPO_ROOT/backend/.venv/bin/python"
        BLACK="$REPO_ROOT/backend/.venv/bin/black"
        RUFF="$REPO_ROOT/backend/.venv/bin/ruff"
    else
        PYTHON="python3"
        BLACK="black"
        RUFF="ruff"
    fi

    # Format check with black
    echo -n "  ‚¨õ Black format check... "
    if $BLACK --check "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" --quiet 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Run 'black backend/src backend/tests' to fix formatting${NC}"
        FAILED=1
    fi

    # Lint with ruff
    echo -n "  üîß Ruff lint check... "
    if $RUFF check "$REPO_ROOT/backend/src" --quiet 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Run 'ruff check backend/src --fix' to fix issues${NC}"
        FAILED=1
    fi
fi

# ============================================
# Frontend Checks
# ============================================
if [ -n "$STAGED_FRONTEND_FILES" ]; then
    echo ""
    echo "üåê Frontend checks..."

    cd "$REPO_ROOT/frontend"

    # ESLint
    echo -n "  üìù ESLint... "
    if npm run lint --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Run 'cd frontend && npm run lint -- --fix' to fix issues${NC}"
        FAILED=1
    fi

    # TypeScript type check
    echo -n "  üìò TypeScript check... "
    if npm run type-check --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        FAILED=1
    fi

    cd "$REPO_ROOT"
fi

# ============================================
# Final Result
# ============================================
echo ""
if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Some checks failed. Please fix the issues above.${NC}"
    echo -e "${YELLOW}üí° Tip: Run 'make lint-fix' or './scripts/lint-fix.sh' to auto-fix issues${NC}"
    exit 1
fi
