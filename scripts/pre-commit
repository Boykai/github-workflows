#!/bin/bash
# Git pre-commit hook that auto-fixes and validates code before commit
# This mirrors the CI checks in .github/workflows/ci.yml
#
# Install by running: ./scripts/setup-hooks.sh
# Or manually: cp scripts/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "üîç Running pre-commit checks (with auto-fix)..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any check fails
FAILED=0

# Get the repo root
REPO_ROOT="$(git rev-parse --show-toplevel)"

# Check if we have staged Python files
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.py$' || true)
# Check if we have staged frontend files
STAGED_FRONTEND_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '^frontend/.*\.(ts|tsx|js|jsx)$' || true)

# ============================================
# Backend Checks (with auto-fix)
# ============================================
if [ -n "$STAGED_PY_FILES" ]; then
    echo ""
    echo "üì¶ Backend checks..."

    # Check if we're in a virtual environment or if backend venv exists
    if [ -d "$REPO_ROOT/backend/.venv" ]; then
        RUFF="$REPO_ROOT/backend/.venv/bin/ruff"
    else
        RUFF="ruff"
    fi

    # Auto-format with ruff format, then verify
    echo -n "  üé® Ruff formatting... "
    $RUFF format "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" --quiet 2>/dev/null || true
    if $RUFF format --check "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" --quiet 2>/dev/null; then
        echo -e "${GREEN}‚úì (auto-formatted)${NC}"
    else
        echo -e "${RED}‚úó (auto-fix failed)${NC}"
        FAILED=1
    fi

    # Auto-fix with ruff, then verify
    echo -n "  üîß Ruff linting... "
    $RUFF check "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" --fix --quiet 2>/dev/null || true
    if $RUFF check "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" --quiet 2>/dev/null; then
        echo -e "${GREEN}‚úì (auto-fixed)${NC}"
    else
        echo -e "${RED}‚úó (issues remain after auto-fix)${NC}"
        echo -e "${YELLOW}    Remaining issues:${NC}"
        $RUFF check "$REPO_ROOT/backend/src" "$REPO_ROOT/backend/tests" 2>&1 | head -10
        FAILED=1
    fi

    # Re-stage auto-fixed Python files
    for file in $STAGED_PY_FILES; do
        if [ -f "$REPO_ROOT/$file" ]; then
            git add "$REPO_ROOT/$file" 2>/dev/null || true
        fi
    done

    # Type check with pyright (no auto-fix available for type errors)
    echo -n "  üêç Pyright type check... "
    if [ -d "$REPO_ROOT/backend/.venv" ]; then
        PYRIGHT="$REPO_ROOT/backend/.venv/bin/pyright"
    else
        PYRIGHT="pyright"
    fi

    if $PYRIGHT "$REPO_ROOT/backend/src" --pythonpath "$REPO_ROOT/backend/.venv/bin/python" > /dev/null 2>&1; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Type errors must be fixed manually${NC}"
        $PYRIGHT "$REPO_ROOT/backend/src" --pythonpath "$REPO_ROOT/backend/.venv/bin/python" 2>&1 | tail -10
        FAILED=1
    fi
fi

# ============================================
# Frontend Checks (with auto-fix)
# ============================================
if [ -n "$STAGED_FRONTEND_FILES" ]; then
    echo ""
    echo "üåê Frontend checks..."

    cd "$REPO_ROOT/frontend"

    # Auto-fix with ESLint, then verify
    echo -n "  üìù ESLint... "
    npm run lint -- --fix --quiet 2>/dev/null || true
    if npm run lint --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì (auto-fixed)${NC}"
    else
        # Check if only warnings (exit code 0 means success even with warnings)
        if npm run lint 2>&1 | grep -q "error"; then
            echo -e "${RED}‚úó (errors remain)${NC}"
            npm run lint 2>&1 | grep "error" | head -5
            FAILED=1
        else
            echo -e "${GREEN}‚úì (warnings only)${NC}"
        fi
    fi

    # TypeScript type check (no auto-fix available for type errors)
    echo -n "  üìò TypeScript check... "
    if npm run type-check --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    TypeScript errors must be fixed manually${NC}"
        npm run type-check 2>&1 | head -10
        FAILED=1
    fi

    # Run tests (mirrors CI: npm test)
    echo -n "  üß™ Vitest... "
    if npm test --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Test failures must be fixed manually${NC}"
        npm test 2>&1 | tail -15
        FAILED=1
    fi

    # Build check (mirrors CI: npm run build)
    echo -n "  üèóÔ∏è  Build... "
    if npm run build --silent 2>/dev/null; then
        echo -e "${GREEN}‚úì${NC}"
    else
        echo -e "${RED}‚úó${NC}"
        echo -e "${YELLOW}    Build errors must be fixed manually${NC}"
        npm run build 2>&1 | tail -10
        FAILED=1
    fi

    # Re-stage auto-fixed frontend files
    cd "$REPO_ROOT"
    for file in $STAGED_FRONTEND_FILES; do
        if [ -f "$REPO_ROOT/$file" ]; then
            git add "$REPO_ROOT/$file" 2>/dev/null || true
        fi
    done
fi

# ============================================
# Final Result
# ============================================
echo ""
if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
    exit 0
else
    echo -e "${RED}‚ùå Some checks failed. Please fix the remaining issues manually.${NC}"
    exit 1
fi
